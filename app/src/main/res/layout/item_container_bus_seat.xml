<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/busLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">

        <Button
            android:id="@+id/seat1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A1"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/seat2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A2"
            android:layout_margin="2dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            />

        <Button
            android:id="@+id/seat3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A3"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/seat4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A4"
            android:layout_margin="2dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">

        <Button
            android:id="@+id/seat5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B1"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/seat6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B2"
            android:layout_margin="2dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            />

        <Button
            android:id="@+id/seat7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B3"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/seat8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B4"
            android:layout_margin="2dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">

        <Button
            android:id="@+id/seat9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C1"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/seat6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A6"
            android:layout_margin="2dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            />

        <Button
            android:id="@+id/seat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A3"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/seat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A4"
            android:layout_margin="2dp"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>